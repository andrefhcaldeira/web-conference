<?php
// Include your database configuration
include("inc/config.inc.php");

// Check if an artigo ID is provided in the request
if (isset($_GET['id'])) {
    // Sanitize the input to prevent SQL injection
    $artigo_id = mysqli_real_escape_string($db, $_GET['id']);

    // Perform delete query
    $sql = "DELETE FROM artigo WHERE id = $artigo_id";

    // Execute the query
    if ($db->query($sql) === TRUE) {
        $message = "Artigo deleted successfully";
    } else {
        $message = "Error deleting artigo: " . $db->error;
    }
} else {
    $message = "Artigo ID not provided";
}

// Close the database connection
$db->close();
?>